<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.incode</groupId>
        <artifactId>incode-build</artifactId>
        <version>2</version>
    </parent>

    <groupId>org.incode.platform</groupId>
    <artifactId>incode-platform</artifactId>
    <version>1.0.0-SNAPSHOT</version>

    <packaging>pom</packaging>
    
    <name>Incode Platform</name>
    <description>
        Aggregator POM for all of the Incode Platform (modules and supporting tests, docs)
    </description>

    <profiles>

        <profile>
            <id>enhance</id>
            <activation>
                <property>
                    <name>enhance</name>
                </property>
            </activation>
            <modules>
                <module>ex/app/quickstart/module-simple</module>
                <module>ex/app/extended/example/dom</module>
                <module>ex/app/extended/module-simple</module>

                <module>modules/examples/alias</module>
                <module>modules/examples/classification</module>
                <module>modules/examples/communications</module>
                <module>modules/examples/commchannel</module>
                <module>modules/examples/country</module>
                <module>modules/examples/docfragment</module>
                <module>modules/examples/document</module>
                <module>modules/examples/note</module>
                <module>modules/examples/settings</module>
                <module>modules/examples/tags</module>
                <module>modules/spi/audit</module>
                <module>modules/spi/command</module>
                <module>modules/spi/publishmq/impl/jdo</module>
                <module>modules/spi/security</module>
                <module>modules/spi/sessionlogger</module>
            </modules>
        </profile>

        <profile>
            <!-- everything except mavenmixins (so can import all in one go into the IDE) -->
            <id>default</id>
            <activation>
                <property>
                    <name>!skip.default</name>
                </property>
            </activation>
            <modules>

                <!--
                mavenmixins are excluded because they can only be built by specifying additional flags
                (-Dskip.isis-validate -Dskip.isis-swagger) and we want to be able to run 'mvn clean install' at the root.

                <module>mavenmixins</module>
                -->

                <module>modules</module>

                <!-- quickstart app (module fixtures/demo usage, basis of quickstart archetype) -->
                <module>ex/app/quickstart</module>

                <!-- extended version of quickstart app -->
                <module>ex/app/extended</module>

                <!-- quickstart archetype generated from ex/app/quickstart  -->
                <module>ex/arch/quickstart</module>

            </modules>
        </profile>

        <profile>
            <id>mavenmixins</id>
            <activation>
                <property>
                    <name>mavenmixins</name>
                </property>
            </activation>
            <modules>
                <module>mavenmixins</module>
            </modules>
        </profile>


        <profile>
            <id>modules</id>
            <activation>
                <property>
                    <name>modules</name>
                </property>
            </activation>
            <modules>
                <module>modules</module>
            </modules>
        </profile>

        <profile>
            <id>quickstart</id>
            <activation>
                <property>
                    <name>archetype</name>
                </property>
            </activation>
            <modules>
                <module>ex/arch/quickstart</module>
            </modules>
        </profile>

        <profile>
            <id>archetype</id>
            <activation>
                <property>
                    <name>archetype</name>
                </property>
            </activation>
            <modules>
                <module>ex/arch/quickstart</module>
            </modules>
        </profile>

    </profiles>


</project>
